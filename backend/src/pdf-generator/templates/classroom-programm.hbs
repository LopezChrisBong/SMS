<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Document</title>
    <style>
      /**body { font-family: 'Liberation Sans'; }*/ .container{ width: 100%;
      margin: 0 auto; } .header { position: fixed; top: 0px; left: 0px; right:
      0px; height: 100px; } .footer { position: fixed; bottom: 0px; left: 0px;
      right: 0px; height: 120px; } body { font-family: 'Arial' } table{ width:
      100%; } table,th, td { page-break-inside: auto; } .strong { font-weight:
      bold; } .bordered { border: 1px solid black; } .font-10 { font-size: 10px;
      } .font-12 { font-size: 12px; } .font-14 {font-size: 14px; } .font-16 {
      font-size: 16px; } .font-18 { font-size:18px; }.font-24 { font-size:24px;
      } .extra-spacing-tr { height: 20px; } .header { height: 60px; } tr
      {page-break-inside: avoid; page-break-after: auto; } thead {
      display:table-header-group; } tfoot { display: table-footer-group; }
      .to_title{ margin-top: 0px;}.to_title_div{ text-align: center; }
      .to_content{page-break-inside: auto; margin-top: 120px; margin-left: 40px;
      margin-right: 40px; } .to_number{margin-right: 100px;} .employee_table{
      }.recommending_approval{ display: flex; justify-content: space-between; }
      .underline{ border-bottom:1px solid black }#mySched{ border-collapse: collapse; } 
      #mySched  td{ border:1px solid black; padding-bottom: 10px;padding-top: 10px;width:  11.11%;} 
    </style>
  </head>

  <body>
    {{#each this}}

      <div class='container'>
        <div class='header'>
          <img
            src='data:image/png;base64, {{header_img}}'
            width='100%'
            height="130px"
            alt=''
          />

        </div>
        <div class='footer'>

          <img
            style='position:fixed; bottom:0; left:0;right:0;'
            src='data:image/png;base64, {{footer_img}}'
            width='100%'
            alt=''
          />
        </div>

        
          <div style='width: 100%;'>
            <table
              style='margin:0 auto; width: 100%; page-break-inside:auto; table-layout:fixed'
            >
              {{! // Add this css to make main table fixed, child tables will still scroll }}
              <thead>
                <tr>
                  <td colspan='2'>
                    <div style='height: 100px;'></div>
                  </td>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <td colspan='2'>
                    <div style='height: 80px;'></div>

                  </td>
                </tr>
              </tfoot>
        
              <tbody class=""> 
                <tr>
                    <td colspan="">
                        <tr class="strong" >
                     
                       
                        <td class="font-20" align="center"  colspan="2" style="padding-top: 2rem; padding-bottom:2rem">
                            <div style="text-transform: uppercase; font-weight:700">
                                {{grade_level}} - {{roomData.room_section}}
                            </div>
                            <div style="text-transform: uppercase;">
                                S.Y {{schoolYear.sy_school_year_from}} - {{schoolYear.sy_school_year_to}}
                            </div>
                            <div class="font-16" style="margin-top: 20px;">
                                Adviser: <u> {{roomData.name}}</u>
                            </div>
                        </td>

                        </tr>
                        {{!-- <tr class="strong" >
                        <td class="font-12">Department unit: &nbsp;<u>{{unit_department}}</u></td>
                        </tr> --}}
                    
                    </td>
                </tr>
               

                <tr>
                  <td colspan='2'>
                    <table id="mySched" style="width:100%">
                  <tr>
                    <tr>
                    <td    align='center' class="font-14">Time</td>
                    <td    align='center' class="font-14">Monday</td>
                    
                    <td    align='center' class="font-14">Tuesday</td>
                    
                    
                    <td    align='center' class="font-14">Wednesday</td>
                    <td    align='center' class="font-14">Thursday</td>
                    <td    align='center' class="font-14">Friday</td>
                    
                </tr>
                {{#each mySched}}
                  {{#if (or
                    (eq Wednesday 'Flag Ceremony')
                    (eq Wednesday 'Handwashing Time')
                    (eq Wednesday 'Recess')
                    (eq Wednesday 'Lunch')
                    (eq Wednesday 'Essential Services')
                    (eq Wednesday 'Reading Remediation')
                  )}}
                    <tr class="merged">
                      <td align="center" class="font-14" style="padding: 1px;">{{formatTimeRange time}}</td>
                      <td align="center" class="font-14" colspan="5" style="padding: 1px;">
                        {{{Wednesday}}}
                      </td>
                    </tr>
                  {{else}}
                    <tr>
                     <td align="center" class="font-14">{{formatTimeRange time}}</td>
                      <td align="center" class="font-14">{{{Monday}}}</td>
                      <td align="center" class="font-14">{{{Tuesday}}}</td>
                      <td align="center" class="font-14">{{{Wednesday}}}</td>
                      <td align="center" class="font-14">{{{Thursday}}}</td>
                      <td align="center" class="font-14">{{{Friday}}}</td>
                    </tr>
                  {{/if}}
                {{/each}}

                    </table>
                </tr>
                <tr class="font-12"> 
                    <td  colspan="2">
                      <div style="display: flex; justify-content: space-between; padding:3rem">
                      <div >
                        <div>
                           Prepared by:
                        </div>
                        <div style="margin-left: 3rem; margin-top:1rem">
                          <u style="text-transform:uppercase">{{roomData.name}}</u><br> Adviser
                        </div>
                       
                      </div>
                      <div>
                        <div>
                          Noted by:
                        </div>
                        
                        <div style="margin-left: 3rem; margin-top:1rem">
                          <u>TOMOTEO T. CAPADNGAN</u><br>School Head
                          
                        </div>
                      </div>
                      
                      </div>
                    
                    </td>
                  
                </tr>
                <tr class="font-12"> 
                    <td  colspan="2">
                      <div style="display: flex; justify-content:center ;padding: 1rem">
                        <div >
                          <div>
                            Prepared by:
                          </div>
                          <div style="margin-left: 3rem; margin-top:1rem">
                         
                            <div>
                              <u>REYNALDO B. MELLORIDA, CESO V</u>
                            </div>
                           <div>
                            School Division Superintendent
                           </div>
                          </div>
                      </div>
                      </div>
                    
                    </td>
                  
                </tr>
             
              </tbody>
            </table>
          </div>
      </div>
    {{/each}}
  </body>

</html>